#include <stdio.h>
#include <locale.h>

int main() {

  setlocale(LC_ALL, "Portuguese");

  float peso;
  float altura;

  printf("Digite seu peso: ");
  scanf("%f", &peso);

  printf("Digite sua altura: ");
  scanf("%f", &altura);

  float imc = peso / (altura * altura);

  printf("Seu IMC Ã©: %.2f", imc);
  
}
